<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:text="@string/enter_otp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>


        <EditText
            android:id="@+id/otpField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="@string/enter_otp"
            android:importantForAutofill="no"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/submitOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/otpField"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/submit" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/submitOTP"
            android:layout_marginVertical="24dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/Validation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:text="Validation"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@id/Validation"
            android:layout_centerHorizontal="true"
            android:hint="@string/enter_name"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:hint="@string/enter_email"
            android:importantForAutofill="no" />


        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:hint="@string/enter_password"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:hint="@string/phone"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/aadhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@id/phone"
            android:layout_centerHorizontal="true"
            android:hint="@string/aadhar"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/pan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:layout_below="@id/aadhar"
            android:layout_centerHorizontal="true"
            android:hint="@string/pan"
            android:importantForAutofill="no" />


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/pan"
            android:layout_marginVertical="36dp"
            android:background="?android:attr/listDivider" />


        <Button
            android:id="@+id/toastButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/show_toast" />

        <Button
            android:id="@+id/dialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toastButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/show_dialog" />

        <Button
            android:id="@+id/messageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/show_message" />

        <Button
            android:id="@+id/actionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/messageButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/show_action" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/share" />

        <Button
            android:id="@+id/rateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shareButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/rate" />

        <Button
            android:id="@+id/topSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rateButton"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:text="@string/top_snack" />

    </RelativeLayout>
</ScrollView>